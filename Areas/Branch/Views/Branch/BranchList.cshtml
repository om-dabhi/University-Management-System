@{
}
<div class="pagetitle">
    @if (TempData["BranchInsertMsg"] == null)
    {

    }
    else
    {
        <h3 class="alert alert-success alert-dismissible fade show">@TempData["BranchInsertMsg"]</h3>

    }
    <h1>Branch List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active"><a asp-controller="Branch" asp-action="BranchList">Branch List</a></li>
        </ol>
    </nav>
</div>
<div>
    <a class="btn btn-success btn-add" asp-area="Branch" asp-controller="Branch" asp-action="BranchAddEdit">Add</a>
</div>
<div class="table-responsive">
<table class="table table-striped">
    <thead>
        <tr>
            <th class="col">Branch Name</th>
            <th class="col">Dean Name</th>
            <th class="col">Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (DataRow dr in Model.Rows)
        {
            <tr>
                <td>@dr["BranchName"]</td>
                <td>@dr["DeanName"]</td>
                <td>
                        <a type="button" class="btn btn-danger" asp-area="Branch" asp-controller="Branch" asp-action="BranchDelete" asp-route-BranchID="@Convert.ToInt32(dr["BranchID"])"><i class="bi bi-trash" onclick="return fun1()"></i></a>
                    <a type="button" class="btn btn-success" asp-area="Branch" asp-controller="Branch" asp-action="BranchAddEdit" asp-route-BranchID="@Convert.ToInt32(dr["BranchID"])"><i class="bi bi-brush"></i></a>
                </td>

            </tr>
        }
    </tbody>
</table>
</div>
@section Scripts
{
    <script>
        function fun1() {
            if (confirm("Are you sure you want to delete?")) {
                return true;
            }
            else {
                return false;
            }
        }
    </script>
}
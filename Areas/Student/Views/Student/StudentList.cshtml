@using System.Data;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pagetitle">
    <h1>Country List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active"><a asp-controller="Student" asp-action="StudentList">Student List</a></li>
        </ol>
    </nav>
</div>
<div>
    <a class="btn btn-success btn-add" asp-area="Student" asp-controller="Student" asp-action="StudentAddEdit">Add</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th class="col">First Name</th>
            <th class="col">Last Name</th>
            <th class="col">Gender</th>
            <th class="col">Date Of Birth</th>
            <th class="col">Address</th>
            <th class="col">Phone Number</th>
            <th class="col">Email</th>
            <th class="col">Enrollment No.</th>
            <th class="col">Course</th>
            <th class="col">Branch</th>
            <th class="col">Created</th>
            <th class="col">Modified</th>
            <th class="col">Is On Roll</th>
            <th class="col">Actions</th>


        </tr>
    </thead>
    <tbody>

        @foreach (DataRow dr in Model.Rows)
        {
            <tr>
                <td>@dr["FirstName"]</td>
                <td>@dr["LastName"]</td>
                <td>@dr["Gender"]</td>
                <td>@Convert.ToDateTime(dr["DOB"].ToString())</td>
                <td>@dr["Address"]</td>
                <td>@dr["PhoneNumber"]</td>
                <td>@dr["Email"]</td>
                <td>@dr["EnrollmentNo"]</td>
                <td>@dr["CourseName"]</td>
                <td>@dr["BranchName"]</td>
                <td>@Convert.ToDateTime(dr["Created"].ToString())</td>
                <td>@Convert.ToDateTime(dr["Modified"].ToString())</td>
                <td>@dr["IsOnRoll"]</td>
                <td>
                    <a type="button" class="btn btn-danger" asp-area="Student" asp-controller="Student" asp-action="StudentDelete" asp-route-StudentID="@Convert.ToInt32(dr["StudentID"])"><i class="bi bi-trash"></i></a>
                    <a type="button" class="btn btn-success" asp-area="Student" asp-controller="Student" asp-action="StudentAddEdit" asp-route-StudentID="@Convert.ToInt32(dr["StudentID"])"><i class="bi bi-brush"></i></a>


                </td>

            </tr>
        }



    </tbody>
</table>
